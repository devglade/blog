  <div id="main">
    <section id="intro">

      <%= link_to 'New article', new_article_path, class: "button big fit" %>
    </section>

    <section>
      <h1>Listing Articles</h1>
      <ul>
        <li>Title</li>
        <li>Text</li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
      <% @articles.each do |article| %>
      <ul class="links">
        <li><%= article.title %></li>
        <li><%= article.text %></li>
        <li><%= link_to 'Show', article_path(article), class: "button big" %></li>
        <li><%= link_to 'Edit', edit_article_path(article), class: "button big" %></li>
        <li><%= link_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "button big" %></li>
      </ul>
      <% end %>
    </section>
  </div>