<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <!--[if lte IE 8]><%= javascript_include_tag("ie/html5shiv") %><![endif]-->
		<%= stylesheet_link_tag    'main', media: 'all', 'data-turbolinks-track' => true %>
		<!--[if lte IE 9]><%= stylesheet_link_tag    'ie9', media: 'all', 'data-turbolinks-track' => true %><![endif]-->
		<!--[if lte IE 8]><%= stylesheet_link_tag    'ie8', media: 'all', 'data-turbolinks-track' => true %><![endif]-->

  </head>

  <body>
    <!-- Wrapper -->
    <div id="wrapper">
        <%= yield %>
    </div>

    <!-- Scripts -->
    <%= javascript_include_tag("jquery.min") %>
    <%= javascript_include_tag("skel.min") %>
    <%= javascript_include_tag("util") %>
    <!--[if lte IE 8]><%= javascript_include_tag("ie/respond.min") %><![endif]-->
    <%= javascript_include_tag("main") %>

  </body>
</html>
